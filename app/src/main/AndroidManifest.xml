<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.munifahsan.retribusiapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rd_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/rd_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ScanAct.view.ScanActActivity"></activity>
        <activity android:name=".Register.RegisterActivity" />
        <activity android:name=".MainPetugas.MainPetugas" />
        <activity android:name=".MainPedagang.MainPedagang" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.view.LoginView" />
        <activity android:name=".Register.pedagang.view.RegisterView" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ScanAct.CaptureAct"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>