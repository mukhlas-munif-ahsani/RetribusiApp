    <style name="LoginTextInputLayoutStyleExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

</resources>
